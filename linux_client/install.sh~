if command -v python3 &>/dev/null;
then
    echo foo > /dev/null
else
    apt-get update
    apt-get install python3.6
fi

pip3 install tqdm
pip3 install pycrypto
pip3 install requests-toolbelt

home_folder=$(pwd)
daemon_path=$(echo $home_folder/daemon.py)
config_path=$(echo $home_folder/config.sh)

echo 'alias spc="bash config.sh"' >> ~/.bashrc
echo 'alias start_daemon=$(echo python3.6 "$daemon_path")' >> ~/.bashrc
echo 'alias stop_daemon=$(echo bash "$config_path" stop_daemon)' >> ~/.bashrc
